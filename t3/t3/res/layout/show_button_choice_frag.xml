<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

  <ImageView
    android:id="@+id/showBtnChoiceTextGame"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:background="@drawable/game_one" />
       
  <ImageView
    android:id="@+id/showBtnChoiceImage"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="@drawable/game_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
  
    <ImageView
    android:id="@+id/showBtnChoiceTextPieces"
    android:background="@drawable/pieces_one"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:layout_height="wrap_content" />
</LinearLayout>
